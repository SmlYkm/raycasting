{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/*.cpp", 
                "${workspaceFolder}/src/Math/*.cpp",
                "${workspaceFolder}/src/Draw/*.cpp",
                "${workspaceFolder}/src/Game/*.cpp",
                "-o",
                "${workspaceFolder}/bin/raycaster",
                "-I${workspaceFolder}/include", 
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
